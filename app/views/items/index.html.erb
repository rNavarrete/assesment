<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <% cache @items do %>
      <h1><%= @items.count %> Items</h1>
    </div>
    <%= form_tag(items_path, method: "get") do %>
     <%= label_tag 'Filter' %>
     <%=  select_tag(:Filter, options_for_select([['alphabetically','name'], ['description', 'description']])) %>
     <%= submit_tag("Update") %>
    <% end %>
  </div>
  <div class="row" id="items"></div>

  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5 class="name_heading"><%= item.name %></h5>
      <% cache item do %>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
    <% end %>
  <% end %>
  <% end %>

</div>
