<div class="container">
  <div class="row"></div>
  <div class="col-sm-3">
    <h5><%= @item.name %></h5>
    <%= image_tag(@item.image_url) %>
    <p>
      <%= @item.description %>
    </br>
      <p> people also bought </p>
      <% @item.also_purchased.first(5).each do | item |  %>
          <ul>

            <li> <%= item  %> </li>
          </ul>
      <% end %>
    </p>

  </div>
</div>
